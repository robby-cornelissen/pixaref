{
    "server": {
        "host": "0.0.0.0",
        "port": 3000,
        "maxUploadBytes": 10485760,
        "verbose": false
    },
    "web": {
        "public": "../web/dist/web"
    },
    "database": {
        "path": "dist/data/pixaref.db",
        "verbose": true
    },
    "images": {
        "directory": "dist/data/images",
        "levels": 2,
        "thumbnails": {
            "width": 640,
            "height": 360,
            "extension": "thm",
            "format": "jpg",
            "mime": "image/jpeg"
        },
        "cleanup": {
            "schedule": "0 */1 * * *",
            "threshold": 300
        }
    }
}